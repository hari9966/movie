  <%= form_for(@movie, :html => { :multipart => true }) do |f| %>
     <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <%= f.label :Description %><br>
        <%= f.text_area :description,:size=> "20*10"%>
      </div>
      <div class="field">
        <%= f.label :Image %><br>
        <%= f.text_field :avatar %>
      </div>
       <div class="field">
        <%= f.label :Image %><br>
        <%= f.file_field :video %>
      </div>
      <div class="actions">
        <%= f.submit %>
      </div>
  <% end %>
